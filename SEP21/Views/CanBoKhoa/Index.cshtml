@model IEnumerable<SEP21.Models.NhanVienKhoa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="team" class="team section-bg">
    <div class="container aos-init aos-animate" data-aos="fade-up">

        <div class="section-title">
            <h1></h1> <br/>
            <h2 style="font-family: 'Arial'">Ban Đội Ngũ Khoa</h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
            <div class="col-lg-6">
                <div class="member d-flex align-items-start aos-init aos-animate" data-aos="zoom-in" data-aos-delay="100">
                    <div class="pic"><img src="@Url.Action("Picture", new { item.ID })" class="img-fluid" alt="hinhanh"/ ></div>
                    <div class="member-info">
                        <h4>@item.HoTen</h4>
                        <span>@item.ChucVu</span>
                        <p>@item.Mail</p>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</section>
