@model SEP21.Models.BaiViet
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool dk = false;
}
@section scripts{
    <script src="~/Plugin/ckfinder/ckfinder.js"></script>
    <script src="~/Plugin/ckeditor/ckeditor.js"></script>
    <script>
        jQuery(document).ready(function ($) {
            $('#btn-img-select').click(function (e) {
                e.preventDefault();
                var finder = new CKFinder();
                finder.selectActionFunction = function (url) {
                    $("#imgvalue").val(url);
                };
                finder.popup();
            });
            CKEDITOR.replace('NoiDung');
            $editor_data = $_POST['NoiDung'];
        });
    </script>
}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="@Url.Action("Index","Home")">Home</a></li>
                <li>@Model.TieuDe</li>
            </ol>
            <h2 style="font-family:Arial">@Model.TieuDe</h2>
        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-12">
                    <div class="portfolio-info">
                        @Html.Raw(Model.NoiDung);
                        @if (Model.LoaiBaiViet1.TenLoaiBaiViet == "Hoạt động")
                        {
                            if (Session["UserID"] == null)
                            {
                                <h3 style="font-family: Arial">Để đăng ký hoạt động, vui lòng điền thông tin của bạn</h3>
                                <p>@ViewBag.Messege</p>
                                <form role="form" action="~/BaiViet/Login" method="post">
                                    <input hidden class="form-control" value="@Model.ID" name="id" />
                                    <div class="form-group">
                                        <label>Thông tin đăng nhập</label>
                                        <input class="form-control" name="username">
                                        <p class="help-block">Bao gồm tên.mssv</p>
                                    </div>
                                    <div class="form-group">
                                        <label>Mật khẩu</label>
                                        <input class="form-control" name="password" type="password">
                                        <p class="help-block">Mặc định: VLUmssv</p>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Đăng ký</button>
                                    @Html.ActionLink("Forgot your password?", "ForgotPassword", "Account")
                                </form>
                            }
                            else
                            {
                                foreach (var item in ViewData["list"] as List<SEP21.Models.DangKyHoatDong>)
                                {
                                    if (item.BaiViet.ID == Model.ID && item.MSSV.ToString() == Session["UserID"].ToString())
                                    {
                                        dk = true;
                                        break;
                                    }
                                }
                                if(dk)
                                {
                                    <h3>
                                        Bạn đã đăng ký thành công,
                                        <a href="@Url.Action("Delete", "DangKyHoatDong", new { id = Model })"> ấn vào đây</a>
                                        để hủy đăng ký
                                    </h3>
                                }
                                else
                                {
                                    <h3>
                                        Bạn chưa đăng ký
                                    </h3>
                                    <form role="form" action="~/BaiViet/Login" method="post" contenteditable="false">
                                        <input hidden class="form-control" value="@Model.ID" name="id" />
                                        <div class="form-group">
                                            <label>thông tin đăng nhập</label>
                                            <input class="form-control" name="username" value="@Session["FullName"]">
                                        </div>
                                        <div class="form-group">
                                            <label>Mật khẩu</label>
                                            <input class="form-control" name="password" value="@Session["Password"]">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Đăng ký</button>

                                        @Html.ActionLink("Forgot your password?", "ForgotPassword", "Account")
                                    </form>
                                }
                            }
                        }
                    </div>
                </div>

            </div>

        </div>
    </section><!-- End Portfolio Details Section -->

</main><!-- End #main -->