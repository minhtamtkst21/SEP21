@model IEnumerable<SEP21.Models.DoanHoiKhoa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/QuanLy/Views/Shared/_AdminLayout.cshtml";
}

<h2>Đoàn Hội Khoa</h2>

<p>
    @Html.ActionLink("Tạo Mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Chức vụ
        </th>
        <th>
            Đoàn
        </th>
        <th>
            Hội
        </th>
        <th>
            MSSV
        </th>
        <th>
            Hình Ảnh
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ChucVu)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Doan)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Hoi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SinhVien.MSSV)
    </td>
    <td>
        <img src="@Url.Action("Picture", new { item.ID })" width="50px" height="50px" />
    </td>
    <td>
        @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Chi Tiết", "Details", new { id = item.ID }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
    </td>
</tr>
}

</table>
