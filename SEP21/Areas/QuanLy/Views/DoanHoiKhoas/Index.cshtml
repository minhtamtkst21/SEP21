@model IEnumerable<SEP21.Models.DoanHoiKhoa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/QuanLy/Views/Shared/_AdminLayout.cshtml";
}

<h2>Đoàn Hội Khoa</h2>

<p>
    @Html.ActionLink("Tạo Mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Chức vụ
        </th>
        <th>
            Đoàn
        </th>
        <th>
            Hội
        </th>
        <th>
            MSSV
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ChucVu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Doan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hoi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SinhVien.MSSV)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
