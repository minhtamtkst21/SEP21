@model IEnumerable<SEP21.Models.DangKyHoatDong>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/QuanLy/Views/Shared/_AdminLayout.cshtml";
    int STT = 0;
}
<div class="col-lg-12">
    <h1 class="page-header">Danh Sách Đăng Ký</h1>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <br />           

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Số Thứ Tự</th>
                                <th>Thời Gian Đăng Ký</th>
                                <th>Tên Hoạt Động</th>
                                <th>Họ Tên</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>
                                    @{STT++;}
                                    @STT
                                    </td>
                                    <td>@item.ThoiGianDangKy.ToShortDateString()</td>
                                    <td>@item.BaiViet.TieuDe</td>                                   
                                    <td>@item.SinhVien.HoTen</td>                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>