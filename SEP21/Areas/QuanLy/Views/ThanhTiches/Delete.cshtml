@model SEP21.Models.ThanhTich

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/QuanLy/Views/Shared/_AdminLayout.cshtml";
}

<h2>Xóa</h2>

<h3>Bạn chắc chắn muốn xóa không ?</h3>
<div>
    <h4>Thành Tích</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Thành Tích
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenThanhTich)
        </dd>

        <dt>
            Người Đạt Thành Tich
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NguoiDatThanhTich)
        </dd>

        <dt>
            Nội Dung
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoiDung)
        </dd>
        <dt>
            Hình Ảnh
        </dt>
    </dl>
    <div class="form-group">
        <label class="control-label col-md-2" for="IMG"></label>
        <img id="Picture" src="@Url.Action("Picture", new { Model.ID })" />
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở Lại", "Index")
        </div>
    }
</div>
