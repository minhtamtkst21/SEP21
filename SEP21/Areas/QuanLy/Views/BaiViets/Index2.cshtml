@model IEnumerable<SEP21.Models.BaiViet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/QuanLy/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <h1 class="page-header">Quản Lí Bài Viết</h1>
</div>
<!-- /.col-lg-12 -->
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <br/>
            <a href="@Url.Action("Create","BaiViets")">
                <button type="button" class="btn btn-primary">Tạo bài viết</button>
            </a>
            <div class="panel-heading">
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Ngày đăng</th>
                                <th>Tiêu đề</th>
                                <th>Loại bài viết</th>
                                <th>Người đăng bài</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@item.NgayDangBai</td>
                                    <td>@item.TieuDe</td>
                                    <td class="center">@item.LoaiBaiViet1.TenLoaiBaiViet</td>
                                    <td>@item.NgayDangBai</td>
                                    <td>
                                        @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.ID }) |
                                        @Html.ActionLink("Chi Tiết", "Details", new { id = item.ID }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>